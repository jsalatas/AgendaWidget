<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="gr.ictpro.jsalatas.agendawidget">

    <application
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <meta-data
                android:name="firebase_crash_collection_enabled"
                android:value="@bool/FIREBASE_CRASH_ENABLED"/>

        <activity android:name=".ui.AgendaWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <receiver android:name=".ui.AgendaWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED"/>
                <action android:name="android.appwidget.action.APPWIDGET_DELETED"/>
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED"/>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/agenda_widget_info"/>
        </receiver>

        <service android:name=".service.AgendaWidgetService">
        </service>
        <service
                android:name=".ui.AgendaWidget$AgendaUpdateService"
                android:exported="false">
            <intent-filter>
                <action android:name="gr.ictpro.jsalatas.agendawidget.action.UPDATE"/>
            </intent-filter>
        </service>

    </application>

</manifest>